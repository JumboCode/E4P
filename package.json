{
  "name": "e4p",
  "version": "0.0.0",
  "description": "E4P JumboCode Project",
  "main": "server.js",
  "scripts": {
    "test": "npm run build && mocha --exit --recursive tests",
    "start": "npm run build && node server.js",
    "lint": "eslint",
    "lint-server": "eslint server.js",
    "lint-client": "eslint ./public/**/*.js",
    "lint-tests": "eslint ./tests/**/*.js",
    "slint": "stylelint",
    "slint-client": "stylelint ./public/**/*.css",
    "parcel": "parcel",
    "build": "parcel build public/*.html && npm run move-html",
    "move-html": "mkdir -p dist-html && mv ./dist/*.html ./dist-html",
    "watch": "parcel public/*.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-client"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JumboCode/E4P.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JumboCode/E4P/issues"
  },
  "homepage": "https://github.com/JumboCode/E4P#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "*",
    "chat.js": "^1.0.2",
    "cookie-parser": "*",
    "express": "^4.16.3",
    "express-session": "*",
    "img": "^3.0.3",
    "mongodb": "*",
    "mongoose": "^5.3.11",
    "nodemailer": "^4.6.8",
    "passport": "^0.4.0",
    "passport-http": "*",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "socket.io": "^2.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^3.5.0",
    "chai-http": "^4.2",
    "eslint": "^5.13.0",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jquery": "^3.3.1",
    "mocha": "^5.2",
    "parcel-bundler": "^1.11.0",
    "socket.io-client": "^2.2.0",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0"
  }
}
